datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  role        String
  department  String
  manager     String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("user")
}